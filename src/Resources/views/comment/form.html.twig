{% set errors = form_errors(form) %}
{% if errors %}
<div class="alert alert-error">{{ errors|raw }}</div>
{% endif %}
<form method="post" action="{{ url('comment.create', {'id': question_id}) }}" class="form-horizontal" {{ form_enctype(form) }}>
  <fieldset>
    <legend>Répondre</legend>
    <div class="control-group {% if form.title.vars.errors|length %}error{% endif %}">
      {{ form_label(form.title, null, { 'attr': {'class': 'control-label'} }) }}
      <div class="controls">
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
      </div>
    </div>
    <div class="control-group {% if form.body.vars.errors|length %}error{% endif %}">
      {{ form_label(form.body, null, { 'attr': {'class': 'control-label'} }) }}
      <div class="controls">
        {{ form_widget(form.body) }}
        {{ form_errors(form.body) }}
      </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
      <button class="btn btn-primary" type="submit">Déposer</button>
      <button class="btn" type="reset">Annuler</button>
    </div>
  </fieldset>
</form>
