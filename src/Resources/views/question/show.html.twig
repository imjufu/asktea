{% extends 'layout.html.twig' %}

{% block title %}
	<h1>{{ question.title }}</h1>
{% endblock %}

{% block content %}
	<div>
		<blockquote>{{ question.author }}</blockquote>
		<p>{{ question.body }}</p>
		<p>Nombre de votes : {{ question.nb_vote }}</p>
		<p><a class="btn btn-primary btn-large" href="{{ path('vote.new', {question_id: question.id}) }}">Voter pour cette question</a></p>
	</div>
	<div>
		{% for comment in comments %}
			<div class="hero-unit">
				<p>{{ comment.body }}</p>
				<blockquote>{{ comment.author }}</blockquote>
			</div>
		{% endfor %}
	</div>
{% endblock %}
