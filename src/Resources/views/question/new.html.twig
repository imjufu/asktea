{% extends "layout.html.twig" %}

{% block title %}
	<h1>Poser une question</h1>
{% endblock %}

{% block content %}
<div class="row">
	<div class="span8 offset4">
		<form method="post" action="{{ url('question.new') }}" class="form-horizontal" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Poser une question</legend>
				<div class="control-group {% if form.author.vars.errors|length %}error{% endif %}">
					{{ form_label(form.author, null, { 'attr': { 'class': 'control-label'} }) }}
					<div class="controls">
						{{ form_widget(form.author) }}
						{{ form_errors(form.author) }}
					</div>
				</div>
			    <div class="control-group {% if form.title.vars.errors|length %}error{% endif %}">
				    {{ form_label(form.title, null, { 'attr': {'class': 'control-label'} }) }}
				    <div class="controls">
				    	{{ form_widget(form.title) }}
				    	{{ form_errors(form.title) }}
			    	</div>
			    </div>
			    <div class="control-group {% if form.body.vars.errors|length %}error{% endif %}">
				    {{ form_label(form.body, null, { 'attr': {'class': 'control-label'} }) }}
				    <div class="controls">
				    	{{ form_widget(form.body) }}
				    	{{ form_errors(form.body) }}
			    	</div>
			    </div>
			    {{ form_rest(form) }}
			    <div class="form-actions">
			    	<button class="btn btn-primary" type="submit">DÃ©poser</button>
					<button class="btn" type="reset">Annuler</button>
			   	</div>
		    </fieldset>
		</form>
	</div>
</div>
{% endblock %}
